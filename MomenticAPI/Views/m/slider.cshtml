@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width">
    <title>index</title>
    <link href="~/slide/dist/css/swiper.css" rel="stylesheet" />
</head>
<body>
    <!-- Swiper -->
    <div class="swiper-container">
        <div class="swiper-wrapper">
            <div class="swiper-slide"><img src="~/css/images/mobile-sliders/momencraft-mobile-slide0.jpg" /></div>
            <div class="swiper-slide"><img src="~/css/images/mobile-sliders/momencraft-mobile-slide1.jpg" /></div>
            <div class="swiper-slide"><img src="~/css/images/mobile-sliders/momencraft-mobile-slide2.jpg" /></div>
            <div class="swiper-slide"><img src="~/css/images/mobile-sliders/momencraft-mobile-slide3.jpg" /></div>
            <div class="swiper-slide"><img src="~/css/images/mobile-sliders/momencraft-mobile-slide4.jpg" /></div>
        </div>
        <!-- Add Pagination -->
        <div class="swiper-pagination"></div>
    </div>

    <script src="~/slide/dist/js/swiper.min.js"></script>

    <!-- Initialize Swiper -->
    <script>
        var swiper = new Swiper('.swiper-container', {
            pagination: '.swiper-pagination',
            nextButton: '.swiper-button-next',
            prevButton: '.swiper-button-prev',
            slidesPerView: 1,
            paginationClickable: true,
            spaceBetween: 30,
            loop: true
        });
    </script>
</body>
</html>
